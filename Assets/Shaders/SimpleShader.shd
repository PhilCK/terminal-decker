[VERTEXSHADER]

#version 150 core

// Vertex Format
in vec2 inPosition;

void main()
{
	gl_Position = vec4(inPosition, 0.0, 1.0);
}

[/VERTEXSHADER]



[PIXELSHADER]

#version 150

